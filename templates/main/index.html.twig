{% extends 'base.html.twig' %}

{% block title %}{{parent() }} - Acceuil {% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <h2 class="col-12 my-5">LISTE DES VOLS</h2>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-striped listevols">
                <tr>
                    <th>Numero de vol</th>
                    <th>Depart</th>
                    <th>Arriv√©e</th>
                    <th>Horaire</th>
                    <th>Places</th>
                    <th>Prix</th>
                    <th><span class="fa fa-info-circle"></span></th>
                    <th><span class="fa fa-exclamation-circle"></span></th>
                </tr>
                {% for f in flights %}
                <tr>
                    <td>{{ f.number }}</td>
                    <td>{{ f.departure.name }}</td>
                    <td>{{ f.arrival.name }}</td>
                    <td>{{ f.schedule | date('H:i') }}</td>
                    <td>{{ f.seat }}</td>
                    <td>{{ f.price }}</td>
                    <td></td>
                    <td></td>
                </tr>
                {% endfor %}
            </table>
        </div>
    </div>
</div>

{% endblock %}
